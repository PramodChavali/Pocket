<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Pocket.MainWindow"
		Width ="800" Height ="600"
		CanResize="True"
        Title="Pocket">
		

	<Grid>
		<!-- 2 rows: top auto-height, bottom fills remaining -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width ="*"/>
			<ColumnDefinition Width ="*"/>
			<ColumnDefinition Width ="*"/>
		</Grid.ColumnDefinitions>

		<!-- Top row: title -->
		<TextBlock Grid.Row="0" Grid.Column="1" Text="Pocket" FontSize="20" HorizontalAlignment ="Center"/>

		<!-- Bottom row: button -->
		<Button Grid.Row="2" Grid.Column="1" Name="JoinButton" Content="Join Session" HorizontalAlignment ="Center"/>
		<TextBlock Name ="StatusText" Grid.Row="0" Grid.Column="1" Text="Not Connected" FontSize="20" HorizontalAlignment ="Center"/>
	</Grid>

</Window>
